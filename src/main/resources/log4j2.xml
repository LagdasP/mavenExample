<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    
    <Properties>
        <Property name="baseDir">./logs</Property>
        <Property name="appName">hello-maven</Property>
    </Properties>
    
    <Appenders>
    
        <Console name="console" target="SYSTEM_ERR">
            <PatternLayout pattern="[%t] %-5level %logger{1.} - %msg%n" />
        </Console>
        
        <RollingFile name="file" filename="${baseDir}/${appName}.log" filepattern="${baseDir}/${appName}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger:%L - %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        
    </Appenders>
    
    <Loggers>
        <Logger name="acme.App" level="INFO" additivity="true">
            <AppenderRef ref="file" />
        </Logger>
        
        <Root level="INFO">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>

</Configuration>
